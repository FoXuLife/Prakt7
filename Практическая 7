    <script>
        calc.onclick = function() {

            const myform = this.form;
            myform.result.value = +myform.resl1.value + +myform.resl2.value + +myform.resl3.value + +myform.resl4.value + +myform.resl5.value;
            if (myform.result.value == 3) {
                alert("Удовлетворительно")
            } else if (myform.result.value == 4) {
                alert("Хорошо")
            } else if (myform.result.value == 5) {
                alert("отлично")
            } else {
                alert("Неудовлетворительно")
            }
        }
    </script>
